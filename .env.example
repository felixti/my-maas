# === LLM ===
# Provider: "openai", "azure_openai", "grok", "anthropic", "openrouter", etc.
LLM_PROVIDER=openai
LLM_API_KEY=sk-change-me
LLM_MODEL=gpt-4.1-mini
LLM_BASE_URL=
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096
# Azure OpenAI only:
LLM_API_VERSION=2024-10-21
AZURE_ENDPOINT=

# === Embeddings ===
# Provider: "openai", "azure_openai", "cohere", "huggingface", "fastembed", "ollama"
EMBEDDING_PROVIDER=openai
EMBEDDING_API_KEY=sk-change-me
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_BASE_URL=
EMBEDDING_DIMS=1536
EMBEDDING_API_VERSION=2024-10-21

# === STM (Redis) ===
REDIS_URL=redis://localhost:6379
STM_DEFAULT_STRATEGY=sliding_window
STM_MAX_MESSAGES=50
STM_MAX_TOKENS=8000
STM_SUMMARIZATION_MODEL=
STM_SESSION_TTL_SECONDS=86400  # 24h, 0 = no expiration

# === LTM (DocumentDB Local) ===
LTM_DEFAULT_TTL_SECONDS=0  # 0 = no expiration
LTM_MAX_BATCH_SIZE=50
MONGODB_URI=mongodb://maas:maasdevpass@localhost:10260/maas?tls=true&tlsAllowInvalidCertificates=true&authMechanism=SCRAM-SHA-256&retrywrites=false
MONGODB_DB_NAME=maas
MONGODB_COLLECTION_NAME=memories
# Vector store provider: "mongodb" (Atlas) or "azure_documentdb" (DocumentDB Local for dev, Azure DocumentDB for prod)
VECTOR_STORE_PROVIDER=azure_documentdb

# === Observability ===
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=my-maas
LANGFUSE_PUBLIC_KEY=pk-lf-change-me
LANGFUSE_SECRET_KEY=sk-lf-change-me
LANGFUSE_BASE_URL=http://localhost:3000
